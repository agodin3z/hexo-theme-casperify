<% var a=theme.authors; var b=page.author; %>
<header id="sky" class="main-header <% if (is_tag() || is_category() || page.layout=='author' || page.layout=='tags' || page.layout=='categories') { %>author-head<% } %> <% if (page.title) { %>post-head<% } %>  <% if (page.layout!='author' && page.title && !page.cover) { %>no-cover<% } %><% if (!page.title && page.current>1) { %>small-cover<% } %>" <% if (page.layout=='author' ) { %> style="background-image: url(<%- a[b].cover %>)" <% } %> <% if (!page.title && theme.cover) { %> style="background-image: url(<%- theme.cover %>)" <% } %> <% if (page.title && page.cover) { %> style="background-image: url(<%- page.cover %>)" <% } %>>
  <nav class="main-nav <% if (!page.title || page.cover) { %>overlay<% } %> clearfix">
    <% if (!page.title && !is_tag() && !is_category()) { %>
    <% if (theme.logo) { %> <a class="blog-logo" href="<%- config.root %>"><img src="<%- theme.logo || config.logo %>" alt="Blog Logo" /></a>
    <% } %>
    <% } %>
    <% if (page.title || is_tag() || is_category()) { %><a class="back-button icon-arrow-left" href="<%- config.root %>">Home</a>
    <% } %>
    <% if (config.rss || config.feed || theme.rss || theme.feed) { %><a class="subscribe-button icon-feed" href="<%- theme.rss %>">Subscribe</a>
    <% } %>
  </nav>
  <% if (!page.title && !is_tag() && !is_category()) { %>
  <div class="vertical">
    <div class="site-head-content inner">
      <h1 class="page-title"><%- config.title %></h1>
      <h2 class="page-description"><%- config.subtitle %></h2>
    </div>
  </div>
  <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45" <% if (page.current>1) { %>style="display:none" <% } %>><span class="hidden">Scroll Down</span></a>
  <% } else if (is_tag() || is_category()) { %>
  <div class="vertical">
    <div class="site-head-content inner">
      <h1 class="page-title"><%- page.tag || page.category %></h1>
    </div>
  </div>
  <% } %>
</header>